@router.post("/chat", response_model=ChatResponse)
async def chat_with_analyst(
    chat_request: ChatRequest,
    current_user: User = Depends(get_current_user)
):
    """
    Interactive chat with AI Analyst about query insights
    
    Accepts:
    - message: User's question
    - context: Insights context (summary, findings, recommendations, etc.)
    - conversation_history: Previous messages in conversation
    
    Returns:
    - response: AI analyst's answer in Czech
    """
    
    try:
        # Build system prompt with context
        system_prompt = f"""Jsi zkuÅ¡enÃ½ business analytik, kterÃ½ pomÃ¡hÃ¡ uÅ¾ivateli porozumÄ›t vÃ½sledkÅ¯m jejich datovÃ© analÃ½zy.

**PÅ®VODNÃ DOTAZ:**
{chat_request.context.query_text}

**VÃSLEDKY ANALÃZY:**

ShrnutÃ­:
{chat_request.context.summary}

KlÃ­ÄovÃ¡ zjiÅ¡tÄ›nÃ­:
{chr(10).join(f"- {finding}" for finding in chat_request.context.key_findings)}

DoporuÄenÃ­:
{chr(10).join(f"- {rec.get('title', '')}: {rec.get('description', '')}" for rec in chat_request.context.recommendations)}

Rizika:
{chr(10).join(f"- {risk}" for risk in chat_request.context.risks)}

PÅ™Ã­leÅ¾itosti:
{chr(10).join(f"- {opp}" for opp in chat_request.context.opportunities)}

**TVÅ®J ÃšKOL:**
UÅ¾ivatel se ptÃ¡ na upÅ™esÅˆujÃ­cÃ­ otÃ¡zky k tÃ©to analÃ½ze. OdpovÃ­dej:
- V ÄeÅ¡tinÄ›
- StruÄnÄ› a jasnÄ›
- S konkrÃ©tnÃ­mi ÄÃ­sly a fakty z analÃ½zy
- Business-focused (zamÄ›Å™ se na akce a dopady)
- Pokud informace v kontextu nenÃ­, upÅ™Ã­mnÄ› to Å™ekni

BuÄ profesionÃ¡lnÃ­, ale pÅ™Ã¡telskÃ½. CÃ­lem je pomoci uÅ¾ivateli lÃ©pe pochopit data a udÄ›lat sprÃ¡vnÃ¡ rozhodnutÃ­.
"""

        # Build messages array
        messages = []
        
        # Add conversation history
        for msg in chat_request.conversation_history:
            messages.append({
                "role": msg.role,
                "content": msg.content
            })
        
        # Add current message
        messages.append({
            "role": "user",
            "content": chat_request.message
        })
        
        # Call Claude API
        client = anthropic.Anthropic(api_key=settings.ANTHROPIC_API_KEY)
        
        response = client.messages.create(
            model="claude-sonnet-4-20250514",
            max_tokens=1500,
            system=system_prompt,
            messages=messages
        )
        
        assistant_response = response.content[0].text
        
        print(f"ğŸ’¬ AI Analyst Chat - User: {chat_request.message[:50]}... â†’ AI: {assistant_response[:50]}...")
        
        return ChatResponse(
            response=assistant_response,
            success=True
        )
    
    except Exception as e:
        print(f"âŒ AI Analyst Chat error: {e}")
        raise HTTPException(
            status_code=status.HTTP_500_INTERNAL_SERVER_ERROR,
            detail=f"Failed to get AI response: {str(e)}"
        )


